<section class="vh-100 gradient-custom d-flex align-items-center justify-content-center">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-12 col-xl-7">
        <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
          <div class="card-body p-4 p-md-5">
            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 text-center">
              <%= player.persisted? ? "Edit Player" : "New Player" %>
            </h3>

            <%= form_with(model: player, local: true) do |f| %>
              <div class="row gx-4 gy-4">
                <div class="col-md-6">
                  <div class="form-outline mb-4">
                    <%= f.label :first_name, "First Name", class: "form-label" %>
                    <%= f.text_field :first_name, class: "form-control form-control-lg" %>
                  </div>
                </div>

                <div class="col-md-6">
                  <div class="form-outline mb-4">
                    <%= f.label :last_name, "Last Name", class: "form-label" %>
                    <%= f.text_field :last_name, class: "form-control form-control-lg" %>
                  </div>
                </div>
              </div>

              <div class="row gx-4 gy-4">
                <div class="col-md-6">
                  <div class="form-outline mb-4">
                    <%= f.label :role, "Role", class: "form-label" %>
                    <%= f.select :role, Player::ROLES, prompt: "Choose role", class: "form-select form-control-lg custom-select-icon" %>
                  </div>
                </div>

                <div class="col-md-6">
                  <div class="form-outline mb-4">
                    <%= f.label :team_id, "Team", class: "form-label" %>
                    <%= f.collection_select :team_id, Team.all, :id, :name, prompt: "Choose team", class: "form-select form-control-lg custom-select-icon" %>
                  </div>
                </div>
              </div>

              <div class="text-center mt-4 pt-2">
                <%= f.submit "Save", class: "btn btn-primary btn-lg w-100 mt-3 shadow-sm custom-btn" %>
              </div>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>
