<!DOCTYPE html>
<html>
<head>
  <title>LoL Tournament</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <!-- Bootstrap 5 via CDN -->
  <%= stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css' %>
  <%= stylesheet_link_tag 'https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css' %>

  <!-- Assets Rails -->
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_include_tag "application" %>
</head>

<body class="d-flex flex-column min-vh-100">
<header role="banner">
  <%= image_tag("LOL.png", id: "logo-main", width: 200, height: 177, alt: "LOL Tournament Logo", class: "img-responsive") %>

  <nav id="navbar-primary" class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-primary-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>

      <div class="collapse navbar-collapse" id="navbar-primary-collapse">
        <ul class="nav navbar-nav">
          <li><%= link_to "Accueil", root_path %></li>
          
          <li><%= link_to "Équipes",   teams_path,    class: "nav-link" %></li>
          <li><%= link_to "Joueurs",   players_path,  class: "nav-link" %></li>
          <li><%= link_to "Matchs",    matches_path,  class: "nav-link" %></li>
          <li><%= link_to "Résultats", results_path,  class: "nav-link" %></li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
</header>


  <!-- CONTENU -->
  <main class="flex-fill container mt-4">
    <%= yield %>
  </main>

  <!-- FOOTER -->
  <footer class="text-center py-3 border-top mt-auto">
    &copy; <%= Date.today.year %> Tournoi LoL &middot;
    <%= link_to "Accueil",   root_path,     class: "text-decoration-none" %> |
    <%= link_to "Équipes",   teams_path,    class: "text-decoration-none" %> |
    <%= link_to "Joueurs",   players_path,  class: "text-decoration-none" %> |
    <%= link_to "Matchs",    matches_path,  class: "text-decoration-none" %> |
    <%= link_to "Résultats", results_path,  class: "text-decoration-none" %>
  </footer>

  <%= javascript_include_tag 'https://code.jquery.com/jquery-3.6.0.min.js' %>
  <%= javascript_include_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js' %>
  
</body>
</html>
