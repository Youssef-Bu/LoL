<% content_for :title, "Teams" %>

<% if notice.present? %>
  <div class="alert alert-success text-center my-3" role="alert">
    <%= notice %>
  </div>
<% end %>

<section id="team" class="pb-5">
  <div class="container">
    <h5 class="section-title h1">Our Teams</h5>
    <div class="row">
      <% @teams.each do |team| %>
        <div class="col-xs-12 col-sm-6 col-md-4">
          <div class="card text-center mb-4">
            <div class="card-body">
              <p>
                <%= image_tag("teams2.png", class: "img-fluid", style: "width: 120px; height: 120px; border-radius: 50%;") %>
              </p>
              <h4 class="card-title"><%= team.name %></h4>
              <%= link_to "Show Team", team, class: "btn btn-primary btn-lg w-100 mt-3 shadow-sm custom-btn" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="text-center mt-4">
    <%= link_to "New Team", new_team_path, class: "btn btn-success btn-lg mt-4 shadow-sm custom-btn" %>
  </div>
  </div>
</section>
