<section class="vh-100 gradient-custom d-flex align-items-center justify-content-center">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-12 col-xl-6">
        <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
          <div class="card-body p-4 p-md-5">
            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 text-center">
              <%= team.persisted? ? "Edit Team" : "New Team" %>
            </h3>

            <%= form_with(model: team, local: true) do |form| %>
              <div class="form-outline mb-4">
                <%= form.label :name, "Team Name", class: "form-label" %>
                <%= form.text_field :name, class: "form-control form-control-lg" %>
              </div>

              <div class="text-center mt-4 pt-2">
                <%= form.submit "Save", class: "btn btn-primary btn-lg w-100 shadow-sm custom-btn" %>
              </div>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>
